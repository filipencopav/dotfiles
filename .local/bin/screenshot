#!/bin/sh

date_format_string="%Y-%m-%d_%H-%M-%S".png

if [ ! -z "$1" ]; then
    if [ "$1" == "-a" ]; then # -a for "area"
        maim -u -sf png "$HOME"/pix/screenshots/"$(date +"$date_format_string")"
    elif [ "$1" == "-f" ]; then # -f for "focused" window
        scrot "$date_format_string" -u -p -e 'mv $f ~/pix/screenshots/' > /dev/null 2> /dev/null
    fi
else
    scrot "$date_format_string" -e 'mv $f ~/pix/screenshots/' > /dev/null 2> /dev/null
fi
